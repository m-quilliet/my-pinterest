{% extends 'layouts/base.html.twig' %}

{% block title 'Profil' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profil</h1>
            
            <img src="{{ app.user.gravatar() }}" alt="{{ app.user.fullName }}'s Avatar" class="shadow rounded-circle">


            <p class="mt-5 lead">{{ app.user.email }} </p>

            <hr>

            <h2>{{ app.user.fullName }} </h2>

            <p><small>&#x23F1; Compte cr√©e depuis le : {{ app.user.createdAt|date('d/m/Y') }}</small></p>

            <p>
                <a href="{{ path('app_account_edit') }}">Modifier mon compte</a> | 
                <a href="{{ path('app_account_change_password') }}">Changer mot de passe</a>
            </p>
        </div>
    </div>

{% endblock %}