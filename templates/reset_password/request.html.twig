{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser du mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-3 text-center">Réinitialisez votre mot de passe</h1>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-error mb-3 rounded" role="alert">{{ flash_error }}</div>
            {% endfor %}

                <p class="mb-5 text-center text-muted">
                    Entrez l'adresse email pour recevoir le lien de réinitialisation.
                </p>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
              

                <button type="submit" class=" btn btn-primary">Envoyer</button>
            {{ form_end(requestForm) }}        
        </div>
    </div>
{% endblock %}


